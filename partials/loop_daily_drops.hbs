{{!-- The template below includes the markup for each post --}}

{{#foreach posts visibility="all"}}
  {{!-- Don't show the first card if it was already in the featured --}}
  {{#if @first}}
    {{#unless featured}}
      {{> "article_card"}}
    {{/unless}}
  {{else}}
    {{> "article_card"}}
  {{/if}}
  {{else}}
    <header class="m-heading no-margin">
      <h3>{{t "No daily drops found"}}</h3>
      <p>
        {{t "Apparently there are no daily drop issues at the moment, check again later."}}
      </p>
    </header>
{{/foreach}}
