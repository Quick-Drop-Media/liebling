{{!--
This subscribe template is used to display the form where users can subscribe.
You need to enable the members feature first.
--}}

<div class="m-subscribe-section__form">
  <form id="newsletter-form" class="m-subscribe-section__container validate" action="https://quickdropmedia.us2.list-manage.com/subscribe/post?u=b5662cf4f54e1608b489807cc&amp;id=49a14754fc" method="post" name="mc-embedded-subscribe-form" novalidate>
    <div class="m-subscribe__form">
      <div class="pos-relative">
        <label for="newsletter-input" class="sr-only">{{t "Your email address"}}</label>
        <input id="newsletter-input" class="m-input in-subscribe-section email" name="EMAIL" type="email" value=""
          placeholder="{{t "Your email address"}}" required />
        <div style="position: absolute; left: -5000px;" aria-hidden="true">
          <input type="text" name="b_b5662cf4f54e1608b489807cc_49a14754fc" tabindex="-1" value="">
        </div>
      </div>
      <button id="newsletter-button" class="m-button primary block" type="submit">{{t "Sign Up"}}</button>
    </div>
    <div class="m-subscribe__success">
      <header class="m-heading no-margin">
        <img src="{{asset "images/success.png"}}" alt="Success!" class="m-subscribe__success_icon">
        <p class="m-heading__description in-newsletter-form">
          {{t "Get the free daily gaming email to stay ahead of the competition."}}
        </p>
      </header>
    </div>
    <p class="m-subscribe__invalid m-small-text">
      {{t "Please enter a valid email address"}}
    </p>
    <p class="m-subscribe__error m-small-text">
      {{t "Oops! There was an error sending the email, please try later."}}
    </p>
  </form>
</div>
